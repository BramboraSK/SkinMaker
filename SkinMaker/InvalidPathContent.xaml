<UserControl x:Class="SkinMaker.InvalidPathContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkinMaker"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Label Content="Invalid skins path!" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" Foreground="White" FontSize="72"/>
        <Label Content="Go to Options to change it." FontWeight="Bold" HorizontalAlignment="Center" Margin="0,195,0,0" VerticalAlignment="Top" Foreground="White" FontSize="36"/>
        <Button x:Name="Options" Content="Options" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,442,0,0" VerticalAlignment="Top" Height="60" Width="500" Click="Options_Click"/>
    </Grid>
</UserControl>
