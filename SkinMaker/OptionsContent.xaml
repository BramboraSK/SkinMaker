<UserControl x:Class="SkinMaker.OptionsContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkinMaker"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Button x:Name="Back" Content="Back" HorizontalAlignment="Left" Margin="990,610,0,0" VerticalAlignment="Top" Height="60" Width="225" Click="Back_Click"/>
        
        <TextBox x:Name="SkinsFolderPath" HorizontalAlignment="Left" Margin="100,150,0,0" Text="path\to\your\osu!\Skins" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" Height="60" Background="{x:Null}" BorderBrush="#FF9E00AE" Foreground="White" BorderThickness="5,5,5,5" VerticalContentAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="100,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="376" Foreground="White"><Run Text="Your osu! folder"/><Run Language="cs-cz" Text=":"/></TextBlock>
        <Button x:Name="BrowseSkinsFolder" Content="..." HorizontalAlignment="Left" Margin="595,150,0,0" VerticalAlignment="Top" Height="60" Width="45" Click="BrowseSkinsFolder_Click"/>
    </Grid>
</UserControl>
